{
     "manifest_version": 2,
     "name": "BlockTube",
     "version": "1.0",
     "description": "Blocks distracting YouTube content including the homepage, subscriptions, shorts, embedded shorts, recommended videos, and autoplay.",
     "permissions": [
       "declarativeNetRequest"
     ],
     "declarative_net_request": {
       "rule_resources": [{
         "id": "ruleset_1",
         "enabled": true,
         "path": "rules.json"
       }]
     },
     "content_scripts": [
       {
         "matches": ["*://*.youtube.com/*"],
         "js": ["youtube.js"],
         "run_at": "document_start"
       }
     ],
     "icons": {
       "48": "icon-48.png",
       "96": "icon-96.png"
     }
   }
